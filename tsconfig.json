{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2017",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types/",
    "sourceMap": true,
    "outDir": "dist/",
    "isolatedModules": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/"]
}
